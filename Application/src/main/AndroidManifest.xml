<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    package="pl.edu.agh.eis.poirecommender" >

    <!--suppress AndroidDomInspection -->
    <uses-permission tools:node="removeAll"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-feature tools:node="removeAll"/>
    
    <!--suppress AndroidDomInspection -->
    <permission tools:node="removeAll"/>
    <!-- TODO: after AwareFramework upgrade - merge option to remove -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:node="replace">

        <activity
                android:name=".application.recommender.RecommenderActivity"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".application.settings.SettingsActivity"
            android:label="@string/settings_name" >
        </activity>

        <service
            android:name=".service.RecommenderService"
            android:exported="false" />

        <receiver android:name=".aware.AwareContextReceiver" >
            <intent-filter>
                <action android:name="ACTION_AWARE_GOOGLE_ACTIVITY_RECOGNITION" />
                <action android:name="ACTION_AWARE_WEATHER" />
                <action android:name="ACTION_AWARE_LOCATIONS" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
