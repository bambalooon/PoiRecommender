<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

    <TextView
            android:id="@+id/poi_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

    <TextView
            android:id="@+id/poi_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <ImageView
            android:id="@+id/poi_direction_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/poi_row_direction_icon_left_margin"
            android:layout_marginStart="@dimen/poi_row_direction_icon_left_margin"
            />

    <TextView
            android:id="@+id/poi_direction_text"
            android:layout_width="@dimen/poi_row_direction_width"
            android:layout_height="wrap_content"
            android:gravity="center"/>
</LinearLayout>